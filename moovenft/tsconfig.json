{
  "compilerOptions": {
    "target": "es2015", // Cambia da es5 a es2015
    "lib": [
      "dom",
      "dom.iterable",
      "es2015" // Sostituisci esnext con es2015 per coerenza
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}